MDScreen:    
	MDToolbar:
		id: toolbar
		title: app.title
		elevation: 10
		pos_hint: {'top': 1}
		text_halign: "center"
		anchor_title: "center"
		left_action_items:
			[["menu", lambda x: nav_drawer.set_state("open")]]

	MDNavigationLayout:

		HelloScreenManager:
			
			size_hint_y: 1.0 - toolbar.height / root.height

			MoodScreen:

		MDNavigationDrawer:
			id: nav_drawer
			MenuTestList:


<MenuTestList@BoxLayout>:
	orientation: "vertical"
	padding: "8dp"
	spacing: "8dp"

	ScrollView:
		MDList:
			OneLineIconListItem:
				id: mood
				text: app.mood_button
				IconLeftWidget:
					icon: "emoticon-outline"
			OneLineIconListItem:
				id: sleep
				text: app.sleep_button
				on_release: print("Sleep button")
				IconLeftWidget:
					icon: "sleep"
			OneLineIconListItem:
				id: food
				text: app.food_button
				on_release: print("Food button")
				IconLeftWidget:
					icon: "food-apple-outline"
			OneLineIconListItem:
				id: activity
				text: app.activity_button
				on_release: print("Activity button")
				IconLeftWidget:
					icon: "arm-flex-outline"
