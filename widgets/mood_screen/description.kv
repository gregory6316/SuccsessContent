<GreetingCard>:
    id: greeting
	MDLabel:
		text: app.hi
		text_size: self.size
		font_size: 25
		markup: True
		halign: "center"
		valign: "middle"

	MDFillRoundFlatButton:
		text: app.start
		size_hint_x: 0.6
		size_hint_y: 0.5
		pos_hint: {"center_x": 0.5}
		on_press: root.parent.animate_close_card(root)

	MDRoundFlatButton:
		text: app.rate
		size_hint_x: 0.6
		size_hint_y: 0.5
		pos_hint: {"center_x": 0.5}

	MDLabel:
		text: app.company
		text_size: self.size
		markup: True
		halign: "center"
		valign: "middle"
